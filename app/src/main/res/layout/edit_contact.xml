<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="30dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/layout">

        <TextView
            android:id="@+id/editcontacttextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="@string/edit"
            android:padding="5dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/firstnametextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/editcontacttextview"
            />

        <EditText
            android:id="@+id/firstnameedittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/firstnametextview"
            android:hint="Enter First Name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:autofillHints="name" />

        <TextView
            android:id="@+id/lastnametextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/firstnameedittext"
            />

        <EditText
            android:id="@+id/lastnameedittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/lastnametextview"
            android:hint="Enter Last Name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:autofillHints="name" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardphoneno"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            app:cardCornerRadius="20dp"
            android:layout_below="@+id/lastnameedittext"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/phonenotextview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+91 8238054019"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editcontactbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Edit Contact"
            android:textAllCaps="true"
            app:cornerRadius="20dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>